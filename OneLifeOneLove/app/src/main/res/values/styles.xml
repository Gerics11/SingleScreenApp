<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TitleTextView">
        <item name="android:padding">@dimen/titlePadding</item>
        <item name="android:background">@color/titleBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="InfoIconStyle">
        <item name="android:padding">@dimen/infoIconPadding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="InfoTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/infoTextSize</item>
        <item name="android:padding">@dimen/infoPadding</item>
    </style>
    <style name="SocialButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/socialPadding</item>
        <item name="android:layout_margin">@dimen/socialPadding</item>
    </style>


</resources>
